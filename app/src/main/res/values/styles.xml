<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorContraste</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TranslucentSystemBars" parent="AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/headerbar_elevation</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>


    <!--  Nuevo Detalle Styles -->
    <style name="AppTheme.Detail" parent="AlertDialog.AppCompat.Light">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBar.Form</item>
    </style>

    <!--  Nuevo Insert Styles -->
    <style name="AppTheme.Insert" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/Theme.AppCompat.Light.DarkActionBar</item>
    </style>



    <!-- ActionBar Detail -->
    <style name="ActionBar.Detail" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="background">@null</item>
    </style>

    <!-- ActionBar Formulario insertar -->
    <style name="ActionBar.Form" parent="AppTheme.AppBarOverlay">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="background">@null</item>
    </style>



    <!-- botones de Sign Up - Sign In -->
    <style name="Btn_Sign" parent="android:Theme.DeviceDefault" tools:targetApi="ice_cream_sandwich">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>


</resources>
